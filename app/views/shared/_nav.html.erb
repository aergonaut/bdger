<div class="container nav-container">
  <div class="row">
    <div class="span12">
      <div class="pull-left logo">
        <a href="<%= root_path %>"><img src="<%= asset_path("bdger-141x44.png") %>" height="44" width="141" /></a>
      </div>
      <div class="btn-toolbar pull-right">
        <% if user_signed_in? %>
          <%= link_to "Badges", badges_path, class: "btn btn-link btn-large" %>
          <div class="btn-group">
            <%= link_to "Me", user_path(current_user), class: "btn btn-large" %>
            <%= link_to "Settings", edit_profile_path, class: "btn btn-large" %>
          </div>
          <a class="btn btn-large btn-link logout-link" href="<%= destroy_user_session_path %>"><i class="icon-signout"></i> Logout</a>
        <% else %>
          <div class="btn-group">
            <a class="btn btn-info" id="btn-signin" href="<%= user_omniauth_authorize_path(:twitter) %>"><i class="icon-twitter"></i>&nbsp;&nbsp;Sign in with Twitter</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>