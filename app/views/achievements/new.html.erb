<div class="row">
  <div class="span12">
    <div class="page-header">
      <h1>Claim this badge</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="span12">
    <%= simple_form_for @achievement, url: user_badges_path(current_user), html: { class: "form-horizontal" } do |f| %>
      <%= f.error_notification %>
      <%= f.input :body %>
      <div class="control-group">
        <div class="controls">
          <%= f.button :submit, class: "btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>