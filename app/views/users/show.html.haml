- provide :title, "#{@user.username} on Bdger"
.row
  .span2= image_tag gravatar_url(@user, size: 128), width: 128, height: 128, class: "img-rounded", alt: @user.username, title: @user.username
  .span10
    .row
      .span10
        %h1
          = @user.username
          %span.muted>= @user.sigil.to_s
        %ul.inline.meta-links
          %li
            %a{href: "https://twitter.com/#{@user.username}", rel: :external}
              %i.icon-twitter
              = @user.username
          - unless @website.eql? ""
            %li
              %a{href: @user.website, rel: :external}
                %i.icon-link
                = @website
.row
  .span12
    %h3#badges-title
      Badges
      %span= "(#{@user.badges.count})"
    %ul.thumbnails
      - @user.achievements.each do |a|
        %li.span3
          .thumbnail
            %a{href: achievement_path(@user, a)}= image_tag a.badge.image_url, width: 200, height: 200, alt: a.badge.name, title: a.badge.name
            %h5= link_to a.badge.name, achievement_path(@user, a)
